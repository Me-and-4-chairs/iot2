USE fire;
-- üî• Ki·ªÉm tra d·ªØ li·ªáu (s·∫Øp x·∫øp theo th·ªùi gian m·ªõi nh·∫•t)
SELECT * FROM data_fire ORDER BY times DESC LIMIT 10;
-- üî• T·∫°o b·∫£ng data_fire (n·∫øu ch∆∞a c√≥)
CREATE TABLE IF NOT EXISTS data_fire (
    id INT AUTO_INCREMENT PRIMARY KEY,
    fire_detected TINYINT(1) NOT NULL CHECK (fire_detected IN (0, 1)), -- Ch·ªâ nh·∫≠n 0 ho·∫∑c 1
    times TIMESTAMP DEFAULT CURRENT_TIMESTAMP
);

-- üî• Th√™m d·ªØ li·ªáu m·ªõi
